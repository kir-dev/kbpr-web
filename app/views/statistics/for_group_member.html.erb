<div class="mb-8">
  <div class="flex justify-between">
    <h1 class="text-4xl font-bold"><%= @group.name %> rendelései</h1>
    <%= link_to 'Vissza', statistics_path, class: 'btn-outline' %>
  </div>
  <%= link_to 'Összes rendelés egyesével', for_group_statistics_path(params: { group_id: @group.id }), class: 'btn-outline' %>

    <% @members.each do |member, items| %>
        <div class="mt-6 bg-secondary rounded-md m-auto p-4">
            <div class="row">
                <h3 class="text-4xl mb-4"><%= member.name %></h3>
            </div>
            <div class="">
                <% items.each do |item, number| %>
                    <p class="oneline">
                    <span><%= item.name %></span>
                    <strong>
                        <%= number %>
                    </strong>
                    </p>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
