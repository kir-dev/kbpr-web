<div id="<%= dom_id article %>">
  <div class="px-5 bg-secondary shadow rounded-lg max-w-full mb-12 pb-5">
    <span class="block text-3xl font-bold text-white pt-6"><%= article.title %></span>
    <span class="block text-sm text-white font-light leading-snug py-2"><%= article.created_at %></span>
    <p class="text-white leading-snug md:leading-normal">
      <%= article.content %>
    </p>
  </div>
</div>
