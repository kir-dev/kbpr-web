<div id="<%= dom_id article %>">
  <div class="bg-secondary shadow rounded-lg max-w-full py-6 px-5 mb-12">
    <span class="block text-3xl font-bold text-white"><%= article.title %></span>
    <span class="block text-sm text-white font-light leading-snug py-2"><%= article.created_at %></span>
    <p class="text-white leading-snug md:leading-normal pb-7">
      <%= article.content %>
    </p>
  </div>
</div>
