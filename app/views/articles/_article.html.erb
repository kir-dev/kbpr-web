<div id="<%= dom_id article %>" class="space-y-4">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= article.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= article.content %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this article", article, class: "btn" %>
    <%= link_to 'Edit this article', edit_article_path(article), class: "btn btn-outline" %>
    <hr class="mt-6">
  <% end %>
</div>
