<%= form_with(model: order, class: "contents", builder: CustomFormBuilder) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2>A rendelés hibás</h2>

      <ul class="list-disc ml-5">
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :group %>
    <%= form.select :group_id, Group.all.map { |group| [group.name, group.id] }, { prompt: "-- Válaszd ki a köröd! --" }, class: "text-bg-dark block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <%= turbo_frame_tag 'order_items_frame' do %>
    <%= render 'order_items', order: order %>
  <% end %>

  <div class="my-5">
    <%= form.label 'Egyéb megjegyzés a papírméretre vonatkozóan' %>
    <%= form.text_area :comment, rows: 4, class: "text-bg-dark block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>


  <div class="my-5">
    <%= form.label 'Én szeretném nyomtatni', class: 'block mb-2' %>
    <%= form.switch_checkbox :printed_by_me %>
  </div>

  <div class="order-new-grid">
    <div class="label">
      <p>Elolvastam a
        <a class="text-primary hover:underline" href="https://kbpr.sch.bme.hu/documents/plakatolasi_szabalyzat_2022.pdf">plakátolási
          szabályzatot</a></p>
      <p class="text-xs">Tényleg ne pipáld ki annélkül, hogy elolvasnád</p>
    </div>
    <%= form.check_box :accepted_terms_of_service, class: "checkbox" %>


    <%= form.label :has_sch_logo, class: 'label' %>
    <%= form.check_box :has_sch_logo, class: "checkbox" %>

    <%= form.label :has_right_format, class: 'label' %>
    <%= form.check_box :has_right_format, class: "checkbox" %>

    <%= form.label :has_date, class: 'label' %>
    <%= form.check_box :has_date, class: "checkbox" %>
  </div>

  <div class="mt-6">
    <%= form.submit class: "btn w-full" %>
  </div>
<% end %>
