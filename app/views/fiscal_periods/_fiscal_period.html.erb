<div id="<%= dom_id fiscal_period %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Start at:</strong>
    <%= fiscal_period.start_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End at:</strong>
    <%= fiscal_period.end_at %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this fiscal period", fiscal_period, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this fiscal period', edit_fiscal_period_path(fiscal_period), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
